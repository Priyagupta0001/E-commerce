<!-- app/views/users/index.html.erb -->
<h1>All Users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.full_name %> - <%= user.email %> 
      <%= link_to 'Show', user_path(user) %> <!-- Show link for each user -->
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Home', root_path %>  <!-- Link to go back to home page -->
